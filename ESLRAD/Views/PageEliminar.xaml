<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESLRAD.Views.PageEliminar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id"
                       HorizontalOptions="Start"
                       FontSize="20"
                       TextColor="Black"
                       Margin="30,0,10,0"/>
            <Entry x:Name="txtcodigo"
                   Keyboard="Text"
                   Margin="30,0,30,0"
                       BackgroundColor="MistyRose"
                   Placeholder="Id pago"/>

            <Button Text="Eliminar" 
                    Font="large" 
                    BorderWidth="2" 
                    x:Name="btnEliminar"
                    BorderColor="Orange"
                    VerticalOptions="CenterAndExpand"
                    Margin="50,20,50,20"
                    Clicked="btnEliminar_Clicked"/>





        </StackLayout>
        </ContentPage.Content>
</ContentPage>